{
  "manifest_version": 3,
  "name": "Browser Action Recorder",
  "version": "1.0.0",
  "description": "Records browser actions (click and type) for MCP tool generation",
  "permissions": [
    "storage",
    "activeTab",
    "downloads"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}

