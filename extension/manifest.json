{
  "manifest_version": 3,
  "name": "BrowTool Recorder (Click + Type)",
  "version": "0.1.0",
  "description": "Records simple browser actions (click, type) into a JSON tape for later automation.",
  "permissions": ["storage", "tabs", "activeTab", "scripting", "downloads"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Recorder",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}

